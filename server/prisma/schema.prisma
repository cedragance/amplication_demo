datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  appRoles  AppRole[]
  createdAt DateTime  @default(now())
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  tasks     Task[]
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model Task {
  completed    Boolean
  createdAt    DateTime @default(now())
  id           String   @id @default(cuid())
  text         String   @db.VarChar(255)
  uid          User?    @relation(fields: [fk_task_user], references: [id])
  fk_task_user String?
  updatedAt    DateTime @updatedAt
}

model AppRole {
  createdAt DateTime @default(now())
  grants    Grant[]
  id        String   @id @default(cuid())
  name      String
  updatedAt DateTime @updatedAt
  users     User[]
}

model Grant {
  appRoles  AppRole[]
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  name      String
  updatedAt DateTime  @updatedAt
}
